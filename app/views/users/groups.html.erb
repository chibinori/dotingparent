<% content_for :head do %>
  <title><%= @user.login_user_id %> - groups - dotingparent</title>
  <meta name="description" content="<%= @user.login_user_id %>の編集可能なグループのリストを表示しています。">
<% end %>

<div class="group-list">
  <div class="col-md-6 col-md-offset-3">
    <div class="table-responsive">
      <table class="table">
        <tbody>
          <% @user.groups.each do | group | %>
            <tr>
              <th scope="row"></th>
              <td><%= group.name %></td>
              <td><%= link_to 'グループ情報編集' , edit_group_path(group), class: "btn btn-info" %></td>
              <td><%= link_to 'グループ情報削除' , group, method: :delete,
                                       data: { confirm: '良いですか？' },
                                       class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%# グループ情報追加%>
<% if @user == current_user && current_user.is_admin? %>
  <div>
    <%= link_to 'グループ追加' , new_group_path, class: "btn btn-success btn-lg" %>
  </div>
<% end %>
