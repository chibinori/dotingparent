<div class="container-fluid note_comments">
  <% photo.photo_comments.order(created_at: :asc).each do | comment | %>
    <div class="row note_image_comment">
        <div class="col-md-4">
        	<div class="comment_image">
        	  <%= image_tag comment.user.image_url.url,
        	    alt: comment.user.login_user_id %>
        	</div>
        </div>
        <div class="col-md-8">
        	<div 	class="comment">
        		<%= comment.comment %>
        	</div>
        </div>
    </div>
  <% end %>
  <div class="row comment_post">
    <%= form_for(photo.photo_comments.build, remote: true) do |f| %>
      <div><%= hidden_field_tag :photo_id, photo.id %></div>
      <div class="form-group">
        <%= f.text_field :comment, placeholder: "コメントを入力", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "投稿", class: "btn btn-small btn-success" %>
      </div>
    <% end %>
  </div>
</div>
